{
  "compilerOptions": {
    "target": "ES2020",    
    "noImplicitAny": false,          
    "lib": ["ES2020"],              
    "module": "commonjs",           
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true            
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}